                        <form action="/api/auth/logout" method="post">
                            <button class="nav-link btn btn-link" style="border: none; background: none;">로그아웃</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/mypage">mypage</a>
                    </li>
                {{/loginUser}}
                {{^loginUser}}
                    <li class="nav-item">
                        <a class="nav-link" href="/login">로그인</a>
                    </li>
                {{/loginUser}}
