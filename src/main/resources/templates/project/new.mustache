{{>layouts/header}}

<div class="container mt-5">
    <h2>새 팀 프로젝트 글 작성</h2>

    <form id="projectForm">
        <div class="mb-3">
            <label for="title" class="form-label">제목</label>
            <input type="text" class="form-control" id="title" name="title" required maxlength="100">
        </div>

        <div class="mb-3">
            <label for="content" class="form-label">내용</label>
            <textarea class="form-control" id="content" name="content" rows="8" required></textarea>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">지역 (선택)</label>
            <input type="text" class="form-control" id="location" name="location" maxlength="50">
        </div>

        <div class="mb-3">
            <label for="recruitCount" class="form-label">모집 인원 (선택)</label>
            <input type="number" class="form-control" id="recruitCount" name="recruitCount" min="1" max="100">
        </div>

        <button type="submit" class="btn btn-primary">작성 완료</button>
        <a href="/project" class="btn btn-secondary">취소</a>
    </form>
</div>

<script>
    document.getElementById('projectForm').addEventListener('submit', async function (e) {
        e.preventDefault(); // 기본 폼 제출 막기

        const form = e.target;
        const data = {
            title: form.title.value,
            content: form.content.value,
            location: form.location.value || null,
            recruitCount: form.recruitCount.value ? parseInt(form.recruitCount.value) : null
        };

        try {
            const res = await fetch('/api/project', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                credentials: 'include', // JWT 쿠키 포함
                body: JSON.stringify(data)
            });

            if (res.ok) {
                window.location.href = '/project'; // 성공 시 목록으로 이동
            } else if (res.status === 401) {
                alert('로그인이 필요합니다.');
                window.location.href = '/login';
            } else {
                const err = await res.text();
                alert('에러: ' + err);
            }
        } catch (error) {
            alert('요청 실패: ' + error.message);
        }
    });
</script>

