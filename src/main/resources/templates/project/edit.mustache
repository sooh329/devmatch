{{>layouts/header}}

<div class="container mt-5">
    <h2>프로젝트 글 수정</h2>

    <form id="editProjectForm" data-post-id="{{post.id}}">
        <div class="mb-3">
            <label for="title" class="form-label">제목</label>
            <input type="text" class="form-control" id="title" name="title" required maxlength="100" value="{{post.title}}">
        </div>

        <div class="mb-3">
            <label for="content" class="form-label">내용</label>
            <textarea class="form-control" id="content" name="content" rows="8" required>{{post.content}}</textarea>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">지역 (선택)</label>
            <input type="text" class="form-control" id="location" name="location" maxlength="50" value="{{post.location}}">
        </div>

        <div class="mb-3">
            <label for="recruitCount" class="form-label">모집 인원 (선택)</label>
            <input type="number" class="form-control" id="recruitCount" name="recruitCount" min="1" max="100" value="{{post.recruitCount}}">
        </div>

        <button type="submit" class="btn btn-primary">수정 완료</button>
        <a href="/project/{{post.id}}" class="btn btn-secondary">취소</a>
    </form>
</div>

<script>
    document.getElementById('editProjectForm').addEventListener('submit', async function (e) {
        e.preventDefault();

        const form = e.target;
        const postId = form.getAttribute('data-post-id');

        const data = {
            title: form.title.value,
            content: form.content.value,
            location: form.location.value || null,
            recruitCount: form.recruitCount.value ? parseInt(form.recruitCount.value) : null
        };

        try {
            const res = await fetch(`/api/project/${postId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                credentials: 'include',
                body: JSON.stringify(data)
            });

            if (res.ok) {
                window.location.href = `/project/${postId}`;
            } else if (res.status === 401) {
                alert('로그인이 필요합니다.');
                window.location.href = '/login';
            } else if (res.status === 403) {
                alert('수정 권한이 없습니다.');
            } else {
                const err = await res.text();
                alert('에러 발생: ' + err);
            }
        } catch (err) {
            alert('요청 실패: ' + err.message);
        }
    });
</script>

{{>layouts/footer}}
